<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxdm51="http://release.niem.gov/niem/domains/jxdm/5.1/"
	targetNamespace="http://ojbc.org/IEPD/Extensions/PersonHealthInformationSearchResults/1.0"
	xmlns:structures="http://release.niem.gov/niem/structures/3.0/"
	xmlns:nc30="http://release.niem.gov/niem/niem-core/3.0/" xmlns:hs="http://release.niem.gov/niem/domains/humanServices/3.1/"
	xmlns:phisres-ext="http://ojbc.org/IEPD/Extensions/PersonHealthInformationSearchResults/1.0"
	xmlns:cyfs="http://release.niem.gov/niem/domains/cyfs/3.1/"
	xmlns:niem-xsd="http://release.niem.gov/niem/proxy/xsd/3.0/"
	elementFormDefault="qualified">
	<xsd:import namespace="http://release.niem.gov/niem/niem-core/3.0/"
		schemaLocation="Subset/niem/niem-core/3.0/niem-core.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/structures/3.0/"
		schemaLocation="Subset/niem/structures/3.0/structures.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/proxy/xsd/3.0/"
		schemaLocation="Subset/niem/proxy/xsd/3.0/xs.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/domains/jxdm/5.1/"
		schemaLocation="Subset/niem/domains/jxdm/5.1/jxdm.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/domains/humanServices/3.1/"
		schemaLocation="Subset/niem/domains/humanServices/3.1/hs.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/domains/cyfs/3.1/"
		schemaLocation="Subset/niem/domains/cyfs/3.1/cyfs.xsd" />
	<xsd:complexType name="PersonHealthInformationSearchResultsType">
		<xsd:annotation>
			<xsd:documentation>A data type for search results matching a request
				for a person's health information.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="structures:ObjectType">
				<xsd:sequence>
					<xsd:element ref="nc30:Person" />
					<xsd:element ref="phisres-ext:BehavioralHealthInformation"
						minOccurs="0" />
					<xsd:element ref="phisres-ext:CareEpisode" minOccurs="0" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:complexType name="BehavioralHealthInformationType">
		<xsd:annotation>
			<xsd:documentation>A data type for information about a person's
				behavioral health.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="structures:ObjectType">
				<xsd:sequence>
					<xsd:element ref="phisres-ext:BehavioralHealthStatusRepresentation"
						minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="jxdm51:Evaluation" minOccurs="0"
						maxOccurs="unbounded" />
					<xsd:element ref="nc30:Treatment" minOccurs="0"
						maxOccurs="unbounded" />
					<xsd:element ref="phisres-ext:PrescribedMedication"
						minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="hs:MedicaidIndicator" minOccurs="0" />
					<xsd:element
						ref="phisres-ext:RegionalBehavioralHealthAuthorityAssignmentText"
						minOccurs="0" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:complexType name="CareEpisodeType">
		<xsd:annotation>
			<xsd:documentation>A data type for all clinically related services or
				treatments for a patient for a discrete diagnostic condition from
				the onset of symptoms until treatment is complete. Commonly referred
				to as an Episode of Care.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="nc30:ActivityType">
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:element name="CareEpisode" type="phisres-ext:CareEpisodeType">
		<xsd:annotation>
			<xsd:documentation>A collection of all clinically related services or
				treatments for a patient for a discrete diagnostic condition from
				the onset of symptoms until treatment is complete. Commonly referred
				to as an Episode of Care.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="BehavioralHealthStatusRepresentation"
		abstract="true">
		<xsd:annotation>
			<xsd:documentation>A representation of a person's behavioral health
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="PrescribedMedication" type="cyfs:MedicationUseType">
		<xsd:annotation>
			<xsd:documentation>A medicine that a person is authorized to use by a
				qualified medical practitioner.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="BehavioralHealthInformation"
		type="phisres-ext:BehavioralHealthInformationType">
		<xsd:annotation>
			<xsd:documentation>A collection of details about an individual's
				behavioral health.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="PersonPersistentIdentification" type="nc30:IdentificationType"
		substitutionGroup="nc30:PersonAugmentationPoint">
		<xsd:annotation>
			<xsd:documentation>A unique and timeless identifier assigned to an
				individual and always belongs to that individual. This allows for
				identifying activities and information that belong to a person
				without always needing to share PII about that individual.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="PersonTemporaryIdentification" type="nc30:IdentificationType"
		substitutionGroup="nc30:PersonAugmentationPoint">
		<xsd:annotation>
			<xsd:documentation>A short-lived identifier intended to allow for
				linking between a search request and search results. This identifier
				will be in the request message that leads to this response. The
				identifier should just be included in the response message,
				unaltered.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SeriousMentalIllnessIndicator" type="niem-xsd:boolean"
		substitutionGroup="phisres-ext:BehavioralHealthStatusRepresentation">
		<xsd:annotation>
			<xsd:documentation>True if the person is diagnosed with a serious
				mental illness (SMI), false otherwise.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="TreatmentCourtOrderedIndicator" type="niem-xsd:boolean"
		substitutionGroup="nc30:TreatmentAugmentationPoint">
		<xsd:annotation>
			<xsd:documentation>True if court has ordered a person to undergo the
				treatment, false otherwise.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="TreatmentActiveIndicator" type="niem-xsd:boolean"
		substitutionGroup="nc30:TreatmentAugmentationPoint">
		<xsd:annotation>
			<xsd:documentation>True if the treatment is currently active, false
				otherwise.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SubstanceAbuseIndicator" type="niem-xsd:boolean"
		substitutionGroup="phisres-ext:BehavioralHealthStatusRepresentation">
		<xsd:annotation>
			<xsd:documentation>True if the person is believed to have abused a
				controlled substance, false otherwise.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="GeneralMentalHealthConditionIndicator"
		type="niem-xsd:boolean" substitutionGroup="phisres-ext:BehavioralHealthStatusRepresentation">
		<xsd:annotation>
			<xsd:documentation>True if the person is categorized as having a
				general mental health condition, false otherwise.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="RegionalBehavioralHealthAuthorityAssignmentText"
		type="nc30:TextType">
		<xsd:annotation>
			<xsd:documentation>A regional behavioral health authority (RBHA) to
				which an individual is assigned. A RBHA assignment can designate
				whether a member is integrated meaning they receive both physical
				and behavioral health services or non-integrated meaning they only
				receive behavioral health services.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="MedicationGenericProductIdentification"
		type="nc30:IdentificationType" substitutionGroup="nc30:DrugAugmentationPoint">
		<xsd:annotation>
			<xsd:documentation>A hierarchical classification system that
				identifies drugs from their primary therapeutic use down to the
				unique interchangeable product regardless of manufacturer or package
				size. Commonly referred to a GPI.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
</xsd:schema>