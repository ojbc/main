<xsd:schema 
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://ojbc.org/IEPD/Extensions/EvaluationSearchRequest/1.0"
	xmlns:structures="http://release.niem.gov/niem/structures/3.0/"
	xmlns:nc30="http://release.niem.gov/niem/niem-core/3.0/"
	xmlns:evalsr-ext="http://ojbc.org/IEPD/Extensions/EvaluationSearchRequest/1.0"
	xmlns:niem-xsd="http://niem.gov/niem/proxy/xsd/2.0"
	elementFormDefault="qualified">
	<xsd:import namespace="http://release.niem.gov/niem/niem-core/3.0/" schemaLocation="Subset/niem/niem-core/3.0/niem-core.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/structures/3.0/" schemaLocation="Subset/niem/structures/3.0/structures.xsd" />
	<xsd:import namespace="http://release.niem.gov/niem/proxy/xsd/3.0/" schemaLocation="Subset/niem/proxy/xsd/3.0/xsd.xsd"/>
	
	<xsd:complexType name="PersonEvaluationSearchRequestType">
		<xsd:annotation>
			<xsd:documentation>A data type for a message that requests evaluation information for a person.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="structures:ObjectType">
				<xsd:sequence>
					<xsd:element ref="nc30:Person" />
					<xsd:element ref="nc30:Identity" minOccurs="0" maxOccurs="unbounded"/>
					<xsd:element ref="nc30:PersonAliasIdentityAssociation" minOccurs="0"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:element name="PersonTemporaryIdentification" type="nc30:IdentificationType" substitutionGroup="nc30:PersonAugmentationPoint">
		<xsd:annotation>
			<xsd:documentation>A short-lived identifier intended to allow for linking between a search request and search results.  This identifier is generated by the service consumer each time it sends this request message.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	
</xsd:schema>