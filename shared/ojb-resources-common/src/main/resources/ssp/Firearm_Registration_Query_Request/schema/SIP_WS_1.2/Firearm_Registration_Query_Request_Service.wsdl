<wsdl:definitions 
	xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" 
	xmlns:tns="http://ojbc.org/Services/WSDL/FirearmRegistrationQueryRequestService/1.0" 
	xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
	xmlns:firearm-reg-req-doc="http://ojbc.org/IEPD/Exchange/FirearmRegistrationQueryRequest/1.0" 
	name="Firearm_Registration_Query_Request_Service" 
	targetNamespace="http://ojbc.org/Services/WSDL/FirearmRegistrationQueryRequestService/1.0" xmlns:wsaw="http://www.w3.org/2006/05/addressing/wsdl" xmlns:wsp="http://schemas.xmlsoap.org/ws/2004/09/policy">
	<wsdl:import namespace="http://ojbc.org/PolicyAssertions/WSDL/GFIPM_SAML_Token_SecurityPolicy/1.0/" location="../../../../policy-assertions/GFIPMUserSystemToSystem.wsdl"/>
	<wsdl:types>
		<xsd:schema targetNamespace="http://ojbc.org/Services/WSDL/FirearmRegistrationQueryRequestService/1.0">
			<xsd:import namespace="http://ojbc.org/IEPD/Exchange/FirearmRegistrationQueryRequest/1.0" schemaLocation="../../artifacts/service_model/information_model/IEPD/xsd/exchange_schema.xsd"/>
		</xsd:schema>
	</wsdl:types>
	<wsdl:message name="Firearm-Registration-Query-Request">
		<wsdl:part element="firearm-reg-req-doc:FirearmRegistrationRequest" name="Firearm-Registration-Query-Request"/>
	</wsdl:message>
	<wsdl:message name="Person-Firearm-Registration-Query-Request">
		<wsdl:part element="firearm-reg-req-doc:PersonFirearmRegistrationRequest" name="Person-Firearm-Registration-Query-Request"/>
	</wsdl:message>
	<wsdl:portType name="Firearm_Registration_Query_Request_Service">
		<wsdl:operation name="SubmitFirearmRegistrationQueryRequest">
			<wsdl:input message="tns:Firearm-Registration-Query-Request" name="Firearm-Registration-Query-Request"/>
		</wsdl:operation>
		<wsdl:operation name="SubmitPersonFirearmRegistrationQueryRequest">
			<wsdl:input message="tns:Person-Firearm-Registration-Query-Request" name="Person-Firearm-Registration-Query-Request"/>
