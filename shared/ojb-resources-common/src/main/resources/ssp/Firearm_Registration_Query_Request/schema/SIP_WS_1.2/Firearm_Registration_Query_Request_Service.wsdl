			<soap:operation soapAction="http://ojbc.org/Services/WSDL/FirearmRegistrationQueryRequestService/1.0/SubmitFirearmRegistrationQueryRequest"/>
			<wsdl:input name="Firearm-Registration-Query-Request">
				<soap:body use="literal"/>
