		<wsdl:operation name="SubmitPersonFirearmRegistrationQueryRequest">
			<soap:operation soapAction="http://ojbc.org/Services/WSDL/FirearmRegistrationQueryRequestService/1.0/SubmitPersonFirearmRegistrationQueryRequest"/>
			<wsdl:input name="Person-Firearm-Registration-Query-Request">
				<soap:body use="literal"/>
			</wsdl:input>
		</wsdl:operation>
	</wsdl:binding>
	<wsdl:service name="Firearm_Registration_Query_Request_Service_Service">
		<wsdl:port binding="tns:Firearm_Registration_Query_Request_Secure_ServiceSOAPBinding" name="Firearm_Registration_Query_Request_Secure_Service">
			<soap:address location="http://localhost/secure"/>
		</wsdl:port>
	</wsdl:service>
