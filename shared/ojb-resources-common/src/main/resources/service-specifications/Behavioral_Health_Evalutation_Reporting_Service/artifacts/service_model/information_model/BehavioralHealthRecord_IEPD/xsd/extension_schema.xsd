<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
 xmlns:niem-xs="http://release.niem.gov/niem/proxy/xsd/3.0/"
 xmlns:structures="http://release.niem.gov/niem/structures/3.0/"
 xmlns:nc="http://release.niem.gov/niem/niem-core/3.0/" 
 xmlns:appinfo="http://release.niem.gov/niem/appinfo/3.0/" 
 xmlns:j="http://release.niem.gov/niem/domains/jxdm/5.1/" 
 xmlns:cyfs="http://release.niem.gov/niem/domains/cyfs/3.1/" 
 xmlns:intel="http://release.niem.gov/niem/domains/intelligence/3.1/" 
 xmlns:bhr-ext="http://ojbc.org/IEPD/Extensions/BehavioralHealthRecordExtension/1.0" 
  targetNamespace="http://ojbc.org/IEPD/Extensions/BehavioralHealthRecordExtension/1.0" elementFormDefault="qualified">
	<xsd:import namespace="http://release.niem.gov/niem/proxy/xsd/3.0/" schemaLocation="./Subset/niem/proxy/xsd/3.0/xs.xsd"/>
	<xsd:import namespace="http://release.niem.gov/niem/structures/3.0/" schemaLocation="./Subset/niem/structures/3.0/structures.xsd"/>
	<xsd:import namespace="http://release.niem.gov/niem/niem-core/3.0/" schemaLocation="./Subset/niem/niem-core/3.0/niem-core.xsd"/>
	<xsd:import namespace="http://release.niem.gov/niem/domains/jxdm/5.1/" schemaLocation="./Subset/niem/domains/jxdm/5.1/jxdm.xsd"/>
	<xsd:import namespace="http://release.niem.gov/niem/domains/intelligence/3.1/" schemaLocation="./Subset/niem/domains/intelligence/3.1/intelligence.xsd"/>
	<xsd:import namespace="http://release.niem.gov/niem/domains/cyfs/3.1/" schemaLocation="./Subset/niem/domains/cyfs/3.1/cyfs.xsd"/>
	<xsd:complexType name="BehavioralHealthRecordType">
		<xsd:annotation>
			<xsd:documentation>A data type for set of details associated with a behavioral health record.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="nc:DocumentType">
				<xsd:sequence>
					<xsd:element ref="intel:SystemIdentification" maxOccurs="unbounded"/>
					<xsd:element ref="j:Booking" minOccurs="0" maxOccurs="unbounded"/>
					<xsd:element ref="j:Detention" minOccurs="0" maxOccurs="unbounded"/>
					<xsd:element ref="bhr-ext:BehavioralHealthAssessment" minOccurs="0" maxOccurs="unbounded"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:complexType name="BehavioralHealthAssessmentType">
		<xsd:annotation>
			<xsd:documentation>complex element to relay information from the behavioral health evaluation at intake or following an encounter.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="structures:ObjectType">
				<xsd:sequence>
					<xsd:element ref="bhr-ext:HealthScreeningDate" minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="bhr-ext:SeriousMentalHealthIndicator" minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="bhr-ext:SeriousMentalHealthDiagnosisDescriptionText" minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="bhr-ext:SeriousMentalHealthEncounterDescriptionText" minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="bhr-ext:SeriousMentalHealthEncounterDate" minOccurs="0" maxOccurs="unbounded" />
					<xsd:element ref="bhr-ext:SeriousMentalHealthTypeCategoryText" minOccurs="0" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:element name="BehavioralHealthAssessment" type="bhr-ext:BehavioralHealthAssessmentType">
		<xsd:annotation>
			<xsd:documentation>complex element to relay information from the behavioral health evaluation at intake or following an encounter.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="HealthScreeningDate" type="nc:DateType" >
		<xsd:annotation>
			<xsd:documentation>Date of last mental health screening.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SeriousMentalHealthIndicator" type="niem-xs:boolean" >
		<xsd:annotation>
			<xsd:documentation>True if a subject is being held for an immigration violation; false otherwise.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SeriousMentalHealthDiagnosisDescriptionText" type="nc:TextType" >
		<xsd:annotation>
			<xsd:documentation>Diagnosis description of serious mental health.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SeriousMentalHealthEncounterDescriptionText" type="nc:TextType" >
		<xsd:annotation>
			<xsd:documentation>Encounter description of serious mental health with law enforcement.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SeriousMentalHealthEncounterDate" type="nc:DateType" >
		<xsd:annotation>
			<xsd:documentation>Date of serious mental health encounter with law enforcement.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="SeriousMentalHealthTypeCategoryText" type="nc:TextType" >
		<xsd:annotation>
			<xsd:documentation>Code or description of the type of serious mental health.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
</xsd:schema>
