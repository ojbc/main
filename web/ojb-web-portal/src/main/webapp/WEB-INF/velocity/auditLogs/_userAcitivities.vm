 <script type="text/javascript">
 
  $(function() {
	if (oTable !== undefined && oTable.fixedHeader !== undefined){
		oTable.fixedHeader.disable();
		oTable.destroy();
	}    	    	
  	
    oTable = $("#personSearchRequestTable").DataTable({
		 "pagingType": "full_numbers",
		 "pageLength": 25,
		 stateSave: true,
		 responsive: true, 
		 colReorder: true,
		 fixedHeader: true, 
		 "language": {
      		"emptyTable": "No Person Search Request Logs Found"
    	 } 
	});
	
	$('.userAuthenticationSearchResults').click (function(){
		oTable.fixedHeader.disable();
		oTable.destroy();
	
       	xhr = $.get("#springUrl('/auditLogs/userAuthenticationSearchResults')",function(data) {
	        $('#portalContent').html(data);
        }).fail(ojbc.displayFailMessage);
	});
	
	$('.ajaxContent').on('show.bs.collapse', function () {
  		var collapseId = $(this).attr("id");
  		var cardBody = $(this).find(".card-body");
  		var url = '/auditLogs/' + collapseId;
       	xhr = $.get("#springUrl('/auditLogs/')" + collapseId,function(data) {
	        cardBody.html(data);
        }).fail(ojbc.displayFailMessage);
  		
	})
	
	$('.ajaxContent').on('shown.bs.collapse', function () {
		
		table = $(this).find('.card-body table');
		console.log("table:" + table);
	    oTable = table.DataTable({
			 "pagingType": "full_numbers",
			 "pageLength": 25,
			 stateSave: true,
			 responsive: true, 
			 colReorder: true,
			 fixedHeader: true, 
			 "language": {
	      		"emptyTable": "No Search Request Logs Found"
	    	 } 
		});
		
	})
	
	$('.collapse').on('hidden.bs.collapse', function () {
		oTable.fixedHeader.disable();
		oTable.destroy();
	});
	
	$('.ajaxTab').on('shown.bs.tab', function () {
  		var tabPaneId = $(this).attr("aria-controls");
  		var tabPane = $("#" + tabPaneId);
       	xhr = $.get("#springUrl('/auditLogs/queryRequests')",function(data) {
	        tabPane.html(data);
		    oTable = $("#queryRequestsTable").DataTable({
				 "pagingType": "full_numbers",
				 "pageLength": 25,
				 stateSave: true,
				 responsive: true, 
				 fixedHeader: true,
				 "language": {
		      		"emptyTable": "No User Query Requests Found"
		    	 } 
			});
        }).fail(ojbc.displayFailMessage);
  		
	})
	
	$('.nav-tabs [data-toggle="tab"]').on('hidden.bs.tab', function () {
		if (oTable !== undefined){
			if ( oTable.fixedHeader !== undefined){
				oTable.fixedHeader.disable();
			}
			oTable.destroy();
		}    	    	
	})
	
	$('.nav-tabs .nav-item:first-child').on('shown.bs.tab', function () {
	
		table = $('.collapse.show .card-body table');
		
		if (table){
			oTable = table.DataTable({
				 "pagingType": "full_numbers",
				 "pageLength": 25,
				 stateSave: true,
				 responsive: true, 
				 fixedHeader: true,
				 "language": {
		      		"emptyTable": "No Data Entry Found"
		    	 } 
			});
		}
	})
	
  });
    
</script>
	
