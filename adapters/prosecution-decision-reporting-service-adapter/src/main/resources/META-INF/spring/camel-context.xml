<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring-4.12.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

  <camel:camelContext xmlns="http://camel.apache.org/schema/spring" id="prosecution_decision_reporting_adapter_context"
    streamCache="true">

    <endpoint id="prosecutionDecisionReportingServiceEndpoint"
      uri="cxf:bean:prosecutionDecisionReportingService?dataFormat=PAYLOAD&amp;loggingFeatureEnabled=${prosecutionDecisionReportingServiceAdapterCxflogging}&amp;synchronous=true" />

    <endpoint id="prosecutionReportFileDrop"
      uri="file://{{prosecutionReportFileDrop}}/input?idempotent=true&amp;moveFailed={{prosecutionReportFileDrop}}/error&amp;move=processed/&amp;includeExt=txt,xml&amp;readLock=changed&amp;readLockCheckInterval=2500" />

    <endpoint id="prosecutionReportFileDropComplete"
      uri="file://{{prosecutionReportFileDrop}}/input/complete?idempotent=true&amp;moveFailed={{prosecutionReportFileDrop}}/complete/error&amp;move=processed/&amp;includeExt=txt,xml&amp;readLock=changed&amp;readLockCheckInterval=2500" />


    <route id="webServiceFileDropRoute">
      <from uri="prosecutionReportFileDrop" />

      <log message="Entering Web Service file drop Route..." />

      <log message="Prosecution Report from File Drop: ${body}" />
      <to uri="direct:processProsecutionDecisionReport" />
    </route>

    <route id="prosecutionDecisionReport">
      <from uri="prosecutionDecisionReportingServiceEndpoint" />

      <log message="Prosecution Report from Service: ${body}" />
      <to uri="direct:processProsecutionDecisionReport" />
    </route>

    <camel:route id="directProcessProsecutionDecisionReport">
      <camel:from uri="direct:processProsecutionDecisionReport" />

      <camel:log message="This is the message body: ${body}" />

      <to uri="prosecutionReportFileDropComplete" />
    </camel:route>

  </camel:camelContext>
        
                    
</beans>