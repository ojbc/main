<!-- Configures the CXF Endpoints -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:cxf="http://camel.apache.org/schema/cxf" 
	xmlns:policy="http://cxf.apache.org/policy" 
	xmlns:wsp="http://www.w3.org/2006/07/ws-policy"
	xmlns:camel="http://camel.apache.org/schema/spring" 
    xmlns:sec="http://cxf.apache.org/configuration/security"
    xmlns:http="http://cxf.apache.org/transports/http/configuration"
	xmlns:httpj="http://cxf.apache.org/transports/http-jetty/configuration"
	xmlns:util="http://www.springframework.org/schema/util"    
	xsi:schemaLocation="
	   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
	   http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       http://cxf.apache.org/policy http://cxf.apache.org/schemas/policy.xsd
       http://www.w3.org/2006/07/ws-policy http://www.w3.org/2006/07/ws-policy.xsd
       http://cxf.apache.org/configuration/security	http://cxf.apache.org/schemas/configuration/security.xsd
	   http://cxf.apache.org/transports/http/configuration http://cxf.apache.org/schemas/configuration/http-conf.xsd
	   http://cxf.apache.org/transports/http-jetty/configuration http://cxf.apache.org/schemas/configuration/http-jetty.xsd
       ">
       
	<cxf:rsServer id="consentRestServer" address="${consentManagement.restEndpoint}" loggingFeatureEnabled="true">
	  <cxf:serviceBeans>
	     <ref bean="consentRestImpl" />
	  </cxf:serviceBeans>
	  <cxf:providers>
	     <bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
	  </cxf:providers>
	</cxf:rsServer>       
	
	<!-- OJB Booking Reporting Service, hosted by this adapter -->
    <cxf:cxfEndpoint 
        id="bookingReportingService"
        address="${consentManagement.bookingReportingServiceEndpoint}" 
		wsdlURL="classpath:ssp/Booking_Reporting/schemas/RS_WS-SIP_v1.2/Booking_Reporting_Service.wsdl"
		serviceName="ojbc:Booking-Reporting-ServiceService" 
		endpointName="ojbc:Booking-Reporting-Secure-Service"
		xmlns:ojbc="http://ojbc.org/Services/WSDL/BookingReportingService/1.0">
		<cxf:properties>
			<entry key="ws-security.callback-handler" value-ref="passwordCallbackHandler" />
			<entry key="ws-security.signature.properties" value-ref="keystoreProperties" /> 
			<entry key="ws-security.signature.username" value="${consentManagement.keystoreCertificateAlias}" /> 
		</cxf:properties>
    </cxf:cxfEndpoint>	
    
	<!-- OJB Consent Reporting Service, hosted by the broker -->
    <cxf:cxfEndpoint 
        id="consentReportingService"
        address="${consentManagement.intermediaryEndpoint}" 
		wsdlURL="classpath:ssp/Consent_Decision_Reporting/schemas/SIP_WS_1.3/Consent_Decision_Reporting_Service.wsdl"
		serviceName="ojbc:Consent-Decision-Reporting-ServiceService" 
		endpointName="ojbc:Consent-Decision-Reporting-Secure-Service"
		xmlns:ojbc="http://ojbc.org/Services/WSDL/ConsentDecisionReportingService/1.0">
		<cxf:properties>
			<entry key="ws-security.callback-handler" value-ref="passwordCallbackHandler" />
			<entry key="ws-security.signature.properties" value-ref="keystoreProperties" /> 
			<entry key="ws-security.signature.username" value="${consentManagement.keystoreCertificateAlias}" /> 
		</cxf:properties>
    </cxf:cxfEndpoint>	    
	
	<bean id="passwordCallbackHandler" class="org.ojbc.util.ws.security.ClientCallbackMap">
	    <property name="passwords">
            <map>
                <entry key="${consentManagement.keystoreCertificateAlias}" value="${consentManagement.keyPassword}"/>
            </map>
        </property>
	</bean>		
	
	<util:properties id="keystoreProperties">
		<prop key="org.apache.ws.security.crypto.provider">org.apache.ws.security.components.crypto.Merlin</prop>
		<prop key="org.apache.ws.security.crypto.merlin.keystore.type">jks</prop>
		<prop key="org.apache.ws.security.crypto.merlin.keystore.password">${consentManagement.keystorePassword}</prop>
		<prop key="org.apache.ws.security.crypto.merlin.keystore.alias">${consentManagement.keystoreCertificateAlias}</prop>
		<prop key="org.apache.ws.security.crypto.merlin.keystore.file">${consentManagement.keystoreLocation}</prop>
	</util:properties>
	
   	<!-- 
   		Used for INBOUND SSL/TLS Connection. CCA for external port
   	-->
	<httpj:engine-factory id="ClientAuthHttpsSettingsExternal" bus="cxf">
		<httpj:engine port="${consentManagement.externalPortNumber}"> 
			<httpj:tlsServerParameters>
				<sec:keyManagers keyPassword="${consentManagement.keyPassword}">
					<sec:keyStore type="jks" password="${consentManagement.keystorePassword}" file="${consentManagement.keystoreLocation}" />
				</sec:keyManagers>
				<sec:trustManagers>
					<sec:keyStore type="JKS"
						password="${consentManagement.truststorePassword}"
						file="${consentManagement.truststoreLocation}" />
				</sec:trustManagers>			
				<sec:cipherSuitesFilter>
					    <sec:include>TLS_DHE_RSA_WITH_AES_128_CBC_SHA</sec:include>
					    <sec:include>SSL_DHE_RSA_WITH_3DES_EDE_CBC_SHA</sec:include>
					    <sec:include>TLS_RSA_WITH_AES_128_CBC_SHA</sec:include>
					    <sec:include>SSL_RSA_WITH_3DES_EDE_CBC_SHA</sec:include>
				</sec:cipherSuitesFilter>
				<sec:clientAuthentication want="true"
					required="true" />
			</httpj:tlsServerParameters>
		</httpj:engine>
	</httpj:engine-factory>	
	
</beans>
