	   </bean>
	  
		<bean id="juvenileQueryOffenseHistoryMessageProcessor" class="org.ojbc.util.camel.processor.MessageProcessor" >
			<property name="operationName"><value>SubmitJuvenileOffenseHistoryQuery</value></property>
			<property name="operationNamespace"><value>http://ojbc.org/Services/WSDL/JuvenileHistoryRequest/OffenseRequest/1.0</value></property>
