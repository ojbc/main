<!-- Configures the Camel Context -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:cxf="http://camel.apache.org/schema/cxf" 
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       ">
	<!-- needed cxf imports -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />	
					
	<camel:camelContext xmlns="http://camel.apache.org/schema/spring" id="mainCamelContext">
	
		<camel:endpoint id="caseFilingDecisionReportingServiceEndpoint"
			uri="cxf:bean:CaseFilingDecisionReportingService?dataFormat=PAYLOAD&amp;loggingFeatureEnabled=${caseFilingDecisionReportingService.cxflogging}&amp;allowStreaming=false" />
		
		<camel:endpoint id="courtCaseFilingServiceEndpoint"
			uri="cxf:bean:courtCaseFilingService?synchronous=true&amp;dataFormat=PAYLOAD&amp;loggingFeatureEnabled=${caseFilingDecisionReportingService.cxflogging}"/>
			
			
		<!-- Case Filing Decision Reporting Service Handler -->
		<camel:route id="CaseFilingDecisionReportingServiceHandlerRoute">
		
			<camel:from uri="caseFilingDecisionReportingServiceEndpoint" />
			
			<camel:log message="Entering Case Filing Decision Reporting Intermediary"/>
			
			<camel:to uri="bean:messageProcessor?method=processRequestPayload"/>

			<!-- This will alter the original message to enrich if a URI property is set in the configuration file -->
			<camel:to uri="direct:enrichContent"/>

			<!-- Multicast to the core services and derived bundle specific routes so each route gets original message -->
			<camel:multicast>
				<camel:pipeline>
					<camel:filter>
						<camel:simple>${properties:caseFileDecisionReportCallCourtCaseFiling} == true</camel:simple>
						
						<camel:log message="About to call court case filing endpoint"/>
						
						<camel:to uri="direct:callCourtCaseFiling"/>
						
					</camel:filter>	
				</camel:pipeline>	
				
				<camel:pipeline>
					<camel:to uri="direct:derivedRoutes"/>
				</camel:pipeline>
					
			</camel:multicast>
			
		</camel:route>
		
		<camel:route id="enrichContentRoute">

			<camel:from uri="direct:enrichContent"/>
		
			<!-- Set up derived endpoints -->
			<camel:setHeader headerName="routingSlipEnrichContent"><simple>{{caseFilingDecisionReportingService.enrichContentURI}}</simple></camel:setHeader>

			<camel:filter>
				<camel:simple>${in.headers.routingSlipEnrichContent} != ''</camel:simple>
				
				<camel:log message="About to call content enricher using this routing slip: ${in.headers.routingSlipEnrichContent}"/>
				
				<camel:recipientList>
					<camel:header>routingSlipEnrichContent</camel:header>
				</camel:recipientList>
			</camel:filter>			
		
		</camel:route>				
		
		<camel:route id="derivedRoutes">

			<camel:from uri="direct:derivedRoutes"/>
		
			<!-- Set up derived endpoints -->
			<camel:setHeader headerName="routingSlipDerivedRoutes"><simple>{{caseFilingDecisionReportingService.camelEndpointsToCall}}</simple></camel:setHeader>

			<camel:filter>
				<camel:simple>${in.headers.routingSlipDerivedRoutes} != ''</camel:simple>
				
				<camel:log message="About to call derived routes using this routing slip: ${in.headers.routingSlipDerivedRoutes}"/>
				
				<camel:recipientList>
					<camel:header>routingSlipDerivedRoutes</camel:header>
				</camel:recipientList>
			</camel:filter>			
		
		</camel:route>		
		
		<route id="callCourtCaseFilingRoute">
            
            <from uri="direct:callCourtCaseFiling"/>
            
            <log message="In court case filing route" />

			<!-- Send to court case filing adapter -->

			<camel:log message="Processing Court Case Filing"/>

			<convertBodyTo type="java.lang.String"/>
			
			<camel:to uri="xslt:xslt/caseFilingDecisionReportToCriminalCaseFiling.xsl?transformerFactory=sFactory"/>	
			
			<log message="\n\n\n Called:  caseFilingDecisionReportToFiling.xsl  \n\n\n"/>							
											
			<camel:to uri="bean:messageProcessor?method=prepareNewExchangeResponseMessage"/>			
							
			<camel:setHeader headerName="operationName"><constant>FileCourtCase</constant></camel:setHeader>	
			<camel:setHeader headerName="operationNamespace"><constant>http://ojbc.org/Services/WSDL/CourtCaseFilingService/1.0</constant></camel:setHeader>
         
			<camel:log message="This is the court case filing message: ${body}" loggingLevel="DEBUG"/>
			
            <camel:throttle timePeriodMillis="1000">
            	<constant>1</constant>
            	<to uri="courtCaseFilingServiceEndpoint"/>
        	</camel:throttle>    
            
        </route>

	</camel:camelContext>
	
	<bean id="sFactory" class="net.sf.saxon.TransformerFactoryImpl" />
	
	<bean id="messageProcessor" class="org.ojbc.util.camel.processor.MessageProcessor" />
	
	<!-- See this thread: http://stackoverflow.com/questions/11195506/increase-executor-queue-size-in-cxf-onewayprocessorinterceptor -->
    <bean id="cxf.default.workqueue" class="org.apache.cxf.workqueue.AutomaticWorkQueueImpl">
        <property name="name" value="default" />
        <property name="queueSize" value="2048" />
    </bean>	
</beans>
