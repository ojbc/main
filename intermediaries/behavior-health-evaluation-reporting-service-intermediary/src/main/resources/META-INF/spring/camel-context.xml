<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:cxf="http://camel.apache.org/schema/cxf" 
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       ">
       
	<!-- needed cxf imports
	<import resource="classpath:META-INF/cxf/cxf.xml" />	
	-->
					
	<camel:camelContext xmlns="http://camel.apache.org/schema/spring" id="mainCamelContext">
	
		<camel:endpoint id="behaviorHealthEvalReportIntermEndpoint"
			uri="cxf:bean:behaviorHealthEvalReportIntermService?dataFormat=PAYLOAD&amp;loggingFeatureEnabled=${behaviorHealthEvalReport.cxfLogging}&amp;allowStreaming=false" />
		
		<camel:endpoint id="behaviorHealthEvalReportAdapterEndpoint"
			uri="cxf:bean:behaviorHealthEvalReportAdapterService?dataFormat=PAYLOAD&amp;loggingFeatureEnabled=${behaviorHealthEvalReport.cxfLogging}"/>
			

		<camel:route id="BehaviorHealthEvalReportingServiceHandlerRoute">
		
			<camel:from uri="behaviorHealthEvalReportIntermEndpoint" />
			
			<camel:log message="\n\n\n Entering Behavior Health Eval Reporting Service Intermediary... \n\n\n"/>
			
			<camel:to uri="bean:messageProcessor?method=processRequestPayload"/>

			<camel:filter>
			
				<camel:simple>${in.header.operationName} == 'ReportBehavioralHealthEvaluation'</camel:simple>																
												
				<camel:setHeader headerName="derivedRoutes">
					<simple>{{behaviorHealthEvalReporting.camelEndpointsToCall}}</simple>
				</camel:setHeader>
	
				<camel:filter>
					<camel:simple>${in.headers.derivedRoutes} != ''</camel:simple>
					
					<camel:log message="\n\n\n Calling derived route...: ${in.headers.derivedRoutes} \n\n\n"/>
					
					<camel:recipientList>
						<camel:header>derivedRoutes</camel:header>
					</camel:recipientList>
				</camel:filter>	
																							
			</camel:filter>
						
		</camel:route>
		
		
		<camel:route>
		
			<camel:from uri="direct:callBehaviorHealthEvalAdapter" />
			
			<camel:log message="\n\n\n callBehaviorHealthEvalAdapter...\n\n\n" />
							
			<camel:setHeader headerName="operationName">
				<constant>ReportBehavioralHealthEvaluation</constant>
			</camel:setHeader>	
			
			<camel:setHeader headerName="operationNamespace">
				<constant>http://ojbc.org/Services/WSDL/BehaviorHealthEvalReportingService/1.0</constant>
			</camel:setHeader>						
																	
			<camel:to uri="behaviorHealthEvalReportAdapterEndpoint" />
			
		</camel:route>		
								
	</camel:camelContext>
			
	<bean id="messageProcessor" class="org.ojbc.util.camel.processor.MessageProcessor" />
		
</beans>

